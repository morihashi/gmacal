---
export interface Props {
	title: string;
	description?: string;
}

const { title, description = "GMA CAL Inc. - モバイルウォレットマーケティングソリューション" } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- OGP Tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="GMA CAL Inc." />
		
		<!-- Tailwind CSS -->
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans">
		<!-- Skip Link for Accessibility -->
		<a class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-blue-600 text-white px-4 py-2 rounded" href="#main">
			メインコンテンツへスキップ
		</a>
		
		<header class="bg-white shadow-sm border-b">
			<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex-shrink-0">
						<a href="/" class="text-2xl font-bold text-blue-600">GMA CAL</a>
					</div>
					<div class="hidden md:block">
						<div class="ml-10 flex items-baseline space-x-8">
							<a href="/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium">ホーム</a>
							<a href="/mobile-wallet/" class="text-blue-600 px-3 py-2 text-sm font-medium">モバイルウォレット</a>
							<a href="/solution/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium">ソリューション</a>
							<a href="/services/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium">サービス</a>
							<a href="/about/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium">会社概要</a>
							<a href="/contact/" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-medium">お問い合わせ</a>
						</div>
					</div>
				</div>
			</nav>
		</header>
		
		<main id="main">
			<slot />
		</main>
		
		<footer class="bg-gray-800 text-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
					<div class="col-span-1 md:col-span-2">
						<h3 class="text-lg font-semibold mb-4">GMA CAL Inc.</h3>
						<p class="text-gray-300 mb-4">モバイルウォレットマーケティングで「The Last One Mile」を解決します。</p>
						<p class="text-sm text-gray-400">
							〒141-0031 東京都品川区西五反田5-2-3-904<br>
							Email: contact@gmacal.co.jp
						</p>
					</div>
					<div>
						<h4 class="text-md font-semibold mb-4">サービス</h4>
						<ul class="space-y-2 text-sm text-gray-300">
							<li><a href="/services/mobile-point-card/" class="hover:text-white">モバイルポイントカード</a></li>
							<li><a href="/services/mobile-coupon/" class="hover:text-white">モバイルクーポン</a></li>
							<li><a href="/services/mobile-stamp-card/" class="hover:text-white">モバイルスタンプカード</a></li>
							<li><a href="/services/mobile-id-card/" class="hover:text-white">モバイルIDカード</a></li>
							<li><a href="/services/mobile-tickets/" class="hover:text-white">モバイルチケット</a></li>
						</ul>
					</div>
					<div>
						<h4 class="text-md font-semibold mb-4">会社情報</h4>
						<ul class="space-y-2 text-sm text-gray-300">
							<li><a href="/about/" class="hover:text-white">会社概要</a></li>
							<li><a href="/contact/" class="hover:text-white">お問い合わせ</a></li>
							<li><a href="/privacy/" class="hover:text-white">プライバシーポリシー</a></li>
						</ul>
					</div>
				</div>
				<div class="border-t border-gray-700 mt-8 pt-8 text-center text-sm text-gray-400">
					<p>&copy; 2024 GMA CAL Inc. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
